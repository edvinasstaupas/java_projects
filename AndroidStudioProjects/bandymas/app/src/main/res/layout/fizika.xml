<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/formules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="FormulÄ—s"
            android:textAppearance="@style/TextStyleMedium" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ff"
            android:layout_below="@+id/formules"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:src="@drawable/fizikos_formules" />

        <TextView
            android:id="@+id/konstantos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Konstantos"
            android:textAppearance="@style/TextStyleMedium" />

        <ImageView
            android:id="@+id/ff2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:layout_below="@+id/konstantos"
            android:src="@drawable/fiz_pagr" />

        <TextView
            android:id="@+id/lentele1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff2"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/fizlent1"
            android:textAppearance="@style/TextStyleMedium" />

        <TableLayout
            android:id="@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lentele1"
            android:shrinkColumns="*"
            android:stretchColumns="*" />

        <TextView
            android:id="@+id/lentele2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tablelayout"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/fizlent2"
            android:textAppearance="@style/TextStyleMedium" />

        <TableLayout
            android:id="@+id/tablelayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lentele2"
            android:shrinkColumns="*"
            android:stretchColumns="*" />

    </RelativeLayout>

</ScrollView>
