<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/formules1"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:src="@drawable/matematikos_formules1" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/formules2"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_below="@id/formules1"
            android:src="@drawable/matematikos_formules2" />

        <TextView
            android:id="@+id/apib1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/formules2"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:text="Apbirėžimo srities nustatymo taisyklės"
            android:textAppearance="@style/TextStyleMedium" />

        <ImageView
            android:id="@+id/apib2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/apib1" />

        <TextView
            android:id="@+id/reiksm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apib2"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:text="Reikšmių srities nustatymo taisyklės"
            android:textAppearance="@style/TextStyleMedium" />

        <ImageView
            android:id="@+id/reiksm2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/reiksm1" />

        <TextView
            android:id="@+id/isvestines1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reiksm2"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Išvestinės"
            android:textAppearance="@style/TextStyleMedium" />


        <ImageView
            android:id="@+id/isvestines2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/isvestines1" />

        <TextView
            android:id="@+id/pirmykstes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isvestines2"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:text="Pirmykštės funkcijos"
            android:textAppearance="@style/TextStyleMedium" />

        <ImageView
            android:id="@+id/pirmykstes2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/pirmykstes1" />

        <TextView
            android:id="@+id/logaritmai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pirmykstes2"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:text="Logaritmų savybės"
            android:textAppearance="@style/TextStyleMedium" />

        <ImageView
            android:id="@+id/logaritmai2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/logaritmai1" />

    </RelativeLayout>

</ScrollView>